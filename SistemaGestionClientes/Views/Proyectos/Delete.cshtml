@model SistemaGestionClientes.Models.Proyecto

@{
    ViewData["Title"] = "Eliminar Proyecto";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h2>Eliminar Proyecto</h2>
        </div>
        <div class="card-body">
            <h5 class="text-center text-muted">¿Estás seguro de que deseas eliminar este proyecto?</h5>
            <hr />
            <div class="mb-4">
                <dl class="row">
                    <dt class="col-sm-3 text-dark">Nombre:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt class="col-sm-3 text-dark">Descripción:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                    <dt class="col-sm-3 text-dark">Cliente:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Cliente.Nombre)</dd>
                </dl>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                    <input type="submit" value="Eliminar Proyecto" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>
