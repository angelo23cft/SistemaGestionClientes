@model SistemaGestionClientes.Models.AgendaCliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h2>Eliminar Cliente</h2>
        </div>
        <div class="card-body">
            <h5 class="text-center text-muted mb-4">¿Estás seguro de que deseas eliminar este cliente?</h5>
            <dl class="row">
                <dt class="col-sm-3 text-dark">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 text-dark">Proyecto:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Proyecto)</dd>

                <dt class="col-sm-3 text-dark">Empresa:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Empresa)</dd>

                <dt class="col-sm-3 text-dark">Teléfono:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

                <dt class="col-sm-3 text-dark">Correo:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Correo)</dd>

                <dt class="col-sm-3 text-dark">Fecha de Ingreso:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaDeIngreso)</dd>

                <dt class="col-sm-3 text-dark">Hora de Agenda:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HoraDeAgenda)</dd>

                <dt class="col-sm-3 text-dark">Fecha/Hora Atención Oficina:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaHoraAtencionOficina)</dd>

                <dt class="col-sm-3 text-dark">Revisado:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Revisado)</dd>

                <dt class="col-sm-3 text-dark">Comentarios:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Comentarios)</dd>

                <dt class="col-sm-3 text-dark">Equipo de Atención:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EquipoAtencion)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                    <input type="submit" value="Eliminar Cliente" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>
