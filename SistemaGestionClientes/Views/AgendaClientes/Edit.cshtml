@model SistemaGestionClientes.Models.AgendaCliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-white">
            <h3 class="text-center">Editar Cliente</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                    <input asp-for="Nombre" class="form-control shadow-sm" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Proyecto" class="form-label fw-bold"></label>
                    <input asp-for="Proyecto" class="form-control shadow-sm" />
                    <span asp-validation-for="Proyecto" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Empresa" class="form-label fw-bold"></label>
                    <input asp-for="Empresa" class="form-control shadow-sm" />
                    <span asp-validation-for="Empresa" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Telefono" class="form-label fw-bold"></label>
                    <input asp-for="Telefono" class="form-control shadow-sm" type="tel" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Correo" class="form-label fw-bold"></label>
                    <input asp-for="Correo" class="form-control shadow-sm" type="email" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaDeIngreso" class="form-label fw-bold"></label>
                    <input asp-for="FechaDeIngreso" class="form-control shadow-sm" type="date" />
                    <span asp-validation-for="FechaDeIngreso" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HoraDeAgenda" class="form-label fw-bold"></label>
                    <input asp-for="HoraDeAgenda" class="form-control shadow-sm" type="time" />
                    <span asp-validation-for="HoraDeAgenda" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaHoraAtencionOficina" class="form-label fw-bold"></label>
                    <input asp-for="FechaHoraAtencionOficina" class="form-control shadow-sm" type="datetime-local" />
                    <span asp-validation-for="FechaHoraAtencionOficina" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Revisado" />
                    <label asp-for="Revisado" class="form-check-label">Revisado</label>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Comentarios" class="form-label fw-bold"></label>
                    <textarea asp-for="Comentarios" class="form-control shadow-sm"></textarea>
                    <span asp-validation-for="Comentarios" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EquipoAtencion" class="form-label fw-bold"></label>
                    <select asp-for="EquipoAtencion" class="form-select shadow-sm">
                        <option value="">Seleccione un equipo</option>
                        <option value="Equipo1">Equipo 1</option>
                        <option value="Equipo2">Equipo 2</option>
                        <option value="Equipo3">Equipo 3</option>
                    </select>
                    <span asp-validation-for="EquipoAtencion" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Guardar cambios" class="btn btn-warning shadow" />
                    <a asp-action="Index" class="btn btn-outline-secondary shadow">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
