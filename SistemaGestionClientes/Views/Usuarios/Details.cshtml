@model SistemaGestionClientes.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white text-center">
            <h2 class="m-0"><i class="fas fa-info-circle"></i> Detalles del Usuario</h2>
        </div>
        <div class="card-body">
            <h4 class="text-center text-primary">Información del Usuario</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 text-primary">
                    <i class="fas fa-user"></i> Nombre de Usuario:
                </dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreUsuario)</dd>
                <dt class="col-sm-3 text-primary">
                    <i class="fas fa-key"></i> Contraseña:
                </dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Contraseña)</dd>
                <dt class="col-sm-3 text-primary">
                    <i class="fas fa-user-tag"></i> Rol:
                </dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Rol)</dd>
                <dt class="col-sm-3 text-primary">
                    <i class="fas fa-users"></i> Equipo:
                </dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EquipoId)</dd>
            </dl>
            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</div>
