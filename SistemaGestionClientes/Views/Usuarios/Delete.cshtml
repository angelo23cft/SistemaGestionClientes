@model SistemaGestionClientes.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="m-0"><i class="fas fa-trash-alt"></i> Eliminar Usuario</h2>
        </div>
        <div class="card-body">
            <h4 class="text-center text-danger">¿Estás seguro de que deseas eliminar este usuario?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 text-primary">
                    <i class="fas fa-user"></i> Nombre de Usuario:
                </dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreUsuario)</dd>
                <dt class="col-sm-3 text-primary">
                    <i class="fas fa-key"></i> Contraseña:
                </dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Contraseña)</dd>
                <dt class="col-sm-3 text-primary">
                    <i class="fas fa-user-tag"></i> Rol:
                </dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Rol)</dd>
                <dt class="col-sm-3 text-primary">
                    <i class="fas fa-users"></i> Equipo:
                </dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EquipoId)</dd>
            </dl>
            <div class="text-center">
                <form asp-action="Delete" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fas fa-trash-alt"></i> Confirmar Eliminación
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</div>
