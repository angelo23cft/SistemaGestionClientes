@model IEnumerable<SistemaGestionClientes.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="m-0">Lista de Usuarios</h2>
        </div>
        <div class="card-body">
            <div class="text-end mb-3">
                <a asp-action="Create" class="btn btn-success btn-sm">
                    <i class="fas fa-plus"></i> Crear Nuevo Usuario
                </a>
            </div>
            <table class="table table-striped table-hover">
                <thead class="bg-primary text-white text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NombreUsuario)</th>
                        <th>@Html.DisplayNameFor(model => model.Contraseña)</th>
                        <th>@Html.DisplayNameFor(model => model.Rol)</th>
                        <th>@Html.DisplayNameFor(model => model.EquipoId)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No hay usuarios registrados.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
                                <td>@Html.DisplayFor(modelItem => item.Contraseña)</td>
                                <td>@Html.DisplayFor(modelItem => item.Rol)</td>
                                <td>@Html.DisplayFor(modelItem => item.EquipoId)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-info-circle"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
