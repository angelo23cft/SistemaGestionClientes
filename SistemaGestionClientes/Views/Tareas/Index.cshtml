@model IEnumerable<SistemaGestionClientes.Models.Tarea>

@{
    ViewData["Title"] = "Tareas";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="m-0"><i class="fas fa-tasks"></i> Lista de Tareas</h2>
        </div>
        <div class="card-body">
            <div class="text-end mb-3">
                <a asp-action="Create" class="btn btn-success btn-lg">
                    <i class="fas fa-plus-circle"></i> Crear Nueva Tarea
                </a>
            </div>
            <table class="table table-bordered table-hover">
                <thead class="bg-primary text-white text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                        <th>@Html.DisplayNameFor(model => model.FechaLimite)</th>
                        <th>@Html.DisplayNameFor(model => model.Completada)</th>
                        <th>@Html.DisplayName("Proyecto ID")</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No hay tareas registradas.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                <td>@Html.DisplayFor(modelItem => item.FechaLimite)</td>
                                <td>
                                    @if (item.Completada)
                                    {
                                        <span class="badge bg-success">Completada</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pendiente</span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Proyecto.Id)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-info-circle"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
